{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "paths": {
      "@lib/*": ["../src/lib/*"],
      "@utils/*": ["../src/utils/*"],
      "@setup/*": ["../src/setup/*"],
      "@matter/*": ["../src/matter/*"],
      "@features/*": ["../src/features/*"]
    }
  },
  "include": ["*/**.ts"],
  "exclude": ["node_modules"]
}
